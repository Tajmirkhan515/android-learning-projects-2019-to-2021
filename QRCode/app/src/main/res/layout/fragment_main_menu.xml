<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainmenuFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dinosoftlabs.qrandbarcodescanner.Main_Menu.MainMenuFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.dinosoftlabs.qrandbarcodescanner.Main_Menu.Custom_ViewPager
            android:id="@+id/viewpager"
            android:layout_above="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            app:tabMode="fixed"
            android:background="@color/white"
            app:tabTextAppearance="@style/MainMenuTabText"
            app:tabTextColor="@color/dimgray"
            app:tabSelectedTextColor="@color/black"
            android:textAlignment="center"
            app:tabGravity="fill"
            app:tabPaddingStart="0dp"
            app:tabPaddingEnd="0dp"
            app:tabBackground="@drawable/d_top_gray_line"
            app:tabIndicatorColor="@android:color/transparent"/>

    </RelativeLayout>

</FrameLayout>
