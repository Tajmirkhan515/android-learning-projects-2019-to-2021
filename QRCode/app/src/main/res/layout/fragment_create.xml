<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.dinosoftlabs.qrandbarcodescanner.Create.Create_F.Create_F">

             <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                   <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolbar"
                    android:background="@color/white">

                    <ImageButton
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_plus"
                        android:id="@+id/plusbtn"
                        android:scaleType="fitStart"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/transparent"/>

                </RelativeLayout>


                    <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/mycode_layout"
                     android:background="@color/white"
                     android:layout_below="@+id/toolbar">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="My Codes"
                         android:fontFamily="@font/sfuidisplay_bold"
                         android:textColor="@color/black"
                         android:layout_marginLeft="15dp"
                         android:layout_marginTop="5dp"
                         android:layout_marginBottom="5dp"
                         android:textSize="30dp"/>
                 </LinearLayout>


                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="vertical"
                         android:background="@color/white"
                         android:layout_below="@+id/mycode_layout">


                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/create_recyler">

                        </android.support.v7.widget.RecyclerView>

                         <LinearLayout
                             android:id="@+id/empty_list_layout"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_centerInParent="true"
                             android:layout_marginLeft="50dp"
                             android:layout_marginRight="50dp"
                             android:orientation="vertical"
                             android:visibility="gone">

                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:text="Empty!"
                                 android:textAlignment="center"
                                 android:textColor="@color/black"
                                 android:textSize="20dp" />

                             <TextView
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:layout_marginTop="15dp"
                                 android:text="@string/create_Qr_message"
                                 android:textAlignment="center"
                                 android:textColor="@color/darkgray" />

                             <Button
                                 android:id="@+id/create_qr_btn"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:layout_marginTop="15dp"
                                 android:background="@drawable/d_round_orange_border"
                                 android:text="Create a Qr Code"
                                 android:textColor="@color/orange"
                                 android:textSize="16sp" />
                         </LinearLayout>

                     </RelativeLayout>

                 <com.google.android.gms.ads.AdView
                     android:id="@+id/adView_create"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     ads:adSize="BANNER"
                     ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
                     android:layout_marginTop="2dp"
                     android:layout_marginBottom="2dp"
                     android:layout_alignParentBottom="true"
                     android:layout_centerHorizontal="true">
                 </com.google.android.gms.ads.AdView>


             </RelativeLayout>


</FrameLayout>
